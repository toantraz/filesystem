# Filesystem Component Environment Variables
# Copy this file to .env and configure with your values

# ============================================================================
# FILESYSTEM CONFIGURATION
# ============================================================================

# Filesystem type: "local" or "s3"
FILESYSTEM_TYPE=local

# ============================================================================
# LOCAL STORAGE CONFIGURATION
# ============================================================================

# Base directory for local filesystem operations
# Relative paths are resolved from the current working directory
FILESYSTEM_LOCAL_BASE_PATH=./storage

# Automatically create missing directories (true/false)
FILESYSTEM_LOCAL_CREATE_MISSING_DIRS=true

# ============================================================================
# S3 STORAGE CONFIGURATION
# ============================================================================

# S3 bucket name
FILESYSTEM_S3_BUCKET=my-bucket

# AWS region for S3
FILESYSTEM_S3_REGION=us-east-1

# Optional: Custom S3 endpoint (for MinIO, LocalStack, etc.)
# Leave empty to use AWS S3
FILESYSTEM_S3_ENDPOINT=

# Optional: Key prefix for all S3 operations
# All files will be stored under this prefix
FILESYSTEM_S3_PREFIX=

# Use path-style addressing for S3 (true/false)
# Required for MinIO and some S3-compatible services
FILESYSTEM_S3_FORCE_PATH_STYLE=false

# ============================================================================
# AWS CREDENTIALS
# ============================================================================

# AWS Access Key ID
# Also used for S3-compatible services like MinIO
AWS_ACCESS_KEY_ID=

# AWS Secret Access Key
# Also used for S3-compatible services like MinIO
AWS_SECRET_ACCESS_KEY=

# ============================================================================
# COMMON CONFIGURATION
# ============================================================================

# Operation timeout in milliseconds
# Applies to all filesystem operations
FILESYSTEM_TIMEOUT=30000

# Maximum number of retry attempts for failed operations
FILESYSTEM_MAX_RETRIES=3

# Enable debug logging (true/false)
FILESYSTEM_DEBUG=false

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================

# Node environment: development, production, test
NODE_ENV=development
