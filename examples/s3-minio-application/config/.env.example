# S3 MinIO Application - Environment Variables
# Copy this file to .env and configure with your values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server host
APP_ENV_SERVER_HOST=localhost

# Server port
APP_ENV_SERVER_PORT=3000

# Base path for the application
APP_ENV_SERVER_BASE_PATH=/

# Node environment: development, production, test
NODE_ENV=development

# ============================================================================
# MINIO CONFIGURATION
# ============================================================================

# MinIO root user (for Docker setup)
MINIO_ROOT_USER=minioadmin

# MinIO root password (for Docker setup)
MINIO_ROOT_PASSWORD=minioadmin

# MinIO API port
MINIO_API_PORT=9000

# MinIO console port
MINIO_CONSOLE_PORT=9001

# MinIO bucket name
MINIO_BUCKET_NAME=test-bucket

# MinIO endpoint URL
MINIO_ENDPOINT=http://localhost:9000

# ============================================================================
# AWS / S3 CONFIGURATION
# ============================================================================

# Filesystem type (fixed to s3 for this example)
FILESYSTEM_TYPE=s3

# S3 bucket name
FILESYSTEM_S3_BUCKET=test-bucket

# AWS region (us-east-1 for MinIO)
FILESYSTEM_S3_REGION=us-east-1

# Custom S3 endpoint (MinIO)
FILESYSTEM_S3_ENDPOINT=http://localhost:9000

# Key prefix for S3 operations
FILESYSTEM_S3_PREFIX=

# Use path-style addressing (required for MinIO)
FILESYSTEM_S3_FORCE_PATH_STYLE=true

# AWS Access Key ID (same as MinIO root user)
AWS_ACCESS_KEY_ID=minioadmin

# AWS Secret Access Key (same as MinIO root password)
AWS_SECRET_ACCESS_KEY=minioadmin

# ============================================================================
# OPTIONAL: COMMON CONFIGURATION
# ============================================================================

# Operation timeout in milliseconds
FILESYSTEM_TIMEOUT=30000

# Maximum retry attempts
FILESYSTEM_MAX_RETRIES=3

# Enable debug logging
FILESYSTEM_DEBUG=false
