# Upload Service Application - Environment Variables
# Copy this file to .env and configure with your values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server host
APP_ENV_SERVER_HOST=localhost

# Server port
APP_ENV_SERVER_PORT=3000

# Base path for the application (API prefix)
APP_ENV_SERVER_BASE_PATH=/api

# Show routes in development mode
NODE_ENV=development

# ============================================================================
# FILESYSTEM CONFIGURATION
# ============================================================================

# Filesystem type: "local" or "s3"
FILESYSTEM_TYPE=local

# Base directory for storing uploaded files
FILESYSTEM_LOCAL_BASE_PATH=./uploads

# Automatically create missing directories
FILESYSTEM_LOCAL_CREATE_MISSING_DIRS=true

# ============================================================================
# UPLOAD SERVICE CONFIGURATION
# ============================================================================

# Maximum file size in bytes (default: 100MB)
# Example: 104857600 = 100MB
UPLOAD_MAX_FILE_SIZE=104857600

# Allowed file extensions (comma-separated)
# Leave empty to allow all extensions
UPLOAD_ALLOWED_EXTENSIONS=

# Directory for temporary file storage during upload
UPLOAD_TEMP_DIR=./temp

# ============================================================================
# S3 STORAGE (Optional - if using S3 backend)
# ============================================================================

# S3 bucket name for uploads
FILESYSTEM_S3_BUCKET=uploads-bucket

# AWS region
FILESYSTEM_S3_REGION=us-east-1

# Custom S3 endpoint (for MinIO, LocalStack, etc.)
FILESYSTEM_S3_ENDPOINT=

# Key prefix for uploaded files
FILESYSTEM_S3_PREFIX=uploads/

# AWS Access Key ID
AWS_ACCESS_KEY_ID=

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=

# ============================================================================
# OPTIONAL: DEBUG SETTINGS
# ============================================================================

# Enable debug logging for filesystem operations
FILESYSTEM_DEBUG=false
